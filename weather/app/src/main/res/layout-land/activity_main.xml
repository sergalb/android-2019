<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saint_petersburg"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_weather_image"
        app:layout_constraintRight_toLeftOf="@id/weekend_value"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textSize="25sp"
        android:layout_marginBottom="7dp"
        app:layout_constraintTop_toBottomOf="@id/city"
        app:layout_constraintLeft_toLeftOf="@id/city"
        app:layout_constraintRight_toRightOf="@id/city" />

    <ImageView
        android:id="@+id/main_weather_image"
        android:layout_width="205dp"
        android:layout_height="222dp"
        android:src="@drawable/ic_021_sunrise"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/main_weather_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_42_c"
        android:textSize="70sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintLeft_toLeftOf="@id/date"
        app:layout_constraintRight_toRightOf="@id/date" />

    <LinearLayout
        android:id="@+id/weekend_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/mo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monday"
                style="@style/WeekTextStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/mo_image"
                />

            <TextView
                android:id="@+id/mo_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                style="@style/WeekForecastStyle"
                app:layout_constraintTop_toBottomOf="@id/mo"
                app:layout_constraintRight_toLeftOf="@id/mo_image"
                />

            <ImageView
                android:id="@+id/mo_image"
                style="@style/WeekImageStyle"
                android:src="@drawable/ic_021_cloud"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"
                style="@style/WeekTextStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tu_image"
                />

            <TextView
                android:id="@+id/tu_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                style="@style/WeekForecastStyle"
                app:layout_constraintTop_toBottomOf="@id/tu"
                app:layout_constraintRight_toLeftOf="@id/tu_image"
                />

            <ImageView
                android:id="@+id/tu_image"
                style="@style/WeekImageStyle"
                android:src="@drawable/ic_021_rain_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/we"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wednesday"
                style="@style/WeekTextStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/we_image"
                />

            <TextView
                android:id="@+id/we_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3"
                style="@style/WeekForecastStyle"
                app:layout_constraintTop_toBottomOf="@id/we"
                app:layout_constraintRight_toLeftOf="@id/we_image"
                />

            <ImageView
                android:id="@+id/we_image"
                style="@style/WeekImageStyle"
                android:src="@drawable/ic_021_cloudy_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thursday"
                style="@style/WeekTextStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/th_image"
                />

            <TextView
                android:id="@+id/th_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_22"
                style="@style/WeekForecastStyle"
                app:layout_constraintTop_toBottomOf="@id/th"
                app:layout_constraintRight_toLeftOf="@id/th_image"
                />

            <ImageView
                android:id="@+id/th_image"
                style="@style/WeekImageStyle"
                android:src="@drawable/ic_021_snowing_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/fr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friday"
                style="@style/WeekTextStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/fr_image"
                />

            <TextView
                android:id="@+id/fr_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_11"
                style="@style/WeekForecastStyle"
                app:layout_constraintTop_toBottomOf="@id/fr"
                app:layout_constraintRight_toLeftOf="@id/fr_image"
                />

            <ImageView
                android:id="@+id/fr_image"
                style="@style/WeekImageStyle"
                android:src="@drawable/ic_021_cloudy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sa"
                style="@style/WeekTextStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/sa_image"
                />

            <TextView
                android:id="@+id/sa_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_17"
                style="@style/WeekForecastStyle"
                app:layout_constraintTop_toBottomOf="@id/sa"
                app:layout_constraintRight_toLeftOf="@id/sa_image"
                />

            <ImageView
                android:id="@+id/sa_image"
                style="@style/WeekImageStyle"

                android:src="@drawable/ic_021_sun"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunday"
                style="@style/WeekTextStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/su_image"
                />

            <TextView
                android:id="@+id/su_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_6"
                style="@style/WeekForecastStyle"
                app:layout_constraintTop_toBottomOf="@id/su"
                app:layout_constraintRight_toLeftOf="@id/su_image"
                />

            <ImageView
                android:id="@+id/su_image"
                style="@style/WeekImageStyle"
                android:src="@drawable/ic_021_storm"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>